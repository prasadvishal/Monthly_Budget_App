<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    card_view:cardCornerRadius="@dimen/cradview_corner_radius">

    <LinearLayout
        android:id="@+id/cardview_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/styled_black_layout"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rv_item_edt_month"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:hint="@string/prompt_month"
            android:padding="@dimen/textfields_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/heading" />

        <TextView
            android:id="@+id/rv_item_edt_year"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/prompt_year"
            android:padding="@dimen/textfields_padding"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/heading" />
    </LinearLayout>
</android.support.v7.widget.CardView>